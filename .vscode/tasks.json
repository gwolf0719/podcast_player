        {
            "label": "🧪 運行測試",
            "type": "shell",
            "command": "flutter",
            "args": ["test"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🔍 代碼分析",
            "type": "shell",
            "command": "flutter",
            "args": ["analyze"],
