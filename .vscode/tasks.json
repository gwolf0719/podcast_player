            "type": "shell",
            "command": "./hot_reload_manager.sh",
            "args": ["stop"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🔄 重啟熱重載",
            "type": "shell",
            "command": "./hot_reload_manager.sh",
            "args": ["restart"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "📊 檢查熱重載狀態",
            "type": "shell",
            "command": "./hot_reload_manager.sh",
            "args": ["status"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "📋 查看熱重載日誌",
            "type": "shell",
            "command": "./hot_reload_manager.sh",
